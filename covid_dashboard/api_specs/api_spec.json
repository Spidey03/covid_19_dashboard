{
    "swagger": "2.0",
    "host": "127.0.0.1:8000",
    "basePath": "/api/covid_dashboard/",
    "info": {
        "version": "1.0.0",
        "title": "Simple API",
        "description": "A simple API to learn how to write OpenAPI Specification"
    },
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users"
            },
            "type": "oauth2"
        }
    },
    "security": [],
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "username",
                "password"
            ]
        },
        "LogInSuccessful": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                },
                "expires_in": {
                    "type": "string",
                    "format": "datetime"
                }
            },
            "required": [
                "user_id",
                "access_token",
                "refresh_token",
                "expires_in"
            ]
        },
        "LogInFailed": {
            "type": "object",
            "properties": {
                "response": {
                    "type": "string",
                    "enum": [
                        "invalid username",
                        "invalid password"
                    ]
                }
            }
        },
        "ActiveCases": {
            "type": "object",
            "properties": {
                "active_cases": {
                    "type": "integer",
                    "format": "int64"
                }
            },
            "required": ["active_cases"]
        },
        "TotalCases": {
            "type": "object",
            "properties": {
                "total_cases": {
                    "type": "integer",
                    "format": "int64"
                },
                "total_deaths": {
                    "type": "integer",
                    "format": "int64"
                },
                "total_recovered_cases": {
                    "type": "integer",
                    "format": "int64"
                }
            },
            "required": [
                "total_cases",
                "total_deaths",
                "total_recovered_cases"
            ]
        },
        "MetricsResult": {
            "allOf": [{
                    "$ref": "#/definitions/TotalCases"
                },
                {
                    "$ref": "#/definitions/ActiveCases"
                }

            ]
        },
        "DistrictReportforState": {
            "allOf": [{
                    "type": "object",
                    "properties": {
                        "district_id": {
                            "type": "integer",
                            "format": "int64"
                        },
                        "district_name": {
                            "type": "string"
                        }
                    },
                    "required": ["district_id", "district_name"]
                },
                {
                    "$ref": "#/definitions/MetricsResult"
                }
            ]
        },
        "StateCumulative": {
            "allOf": [{
                    "type": "object",
                    "properties": {
                        "state_name": {
                            "type": "string"
                        },
                        "districts": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/DistrictReportforState"
                            }
                        }
                    },
                    "required": [
                        "state_name",
                        "districts"
                    ]
                },
                {
                    "$ref": "#/definitions/MetricsResult"
                }
            ]
        },
        "DayReport": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "total_cases": {
                    "type": "integer",
                    "format": "int64"
                },
                "total_deaths": {
                    "type": "integer",
                    "format": "int64"
                },
                "total_recovered_cases": {
                    "type": "integer",
                    "format": "int64"
                },
                "active_cases": {
                    "type": "integer",
                    "format": "int64"
                }
            },
            "required": [
                "date",
                "total_cases",
                "total_deaths",
                "total_recovered_cases",
                "active_cases"
            ]
        },
        "StateDayWiseReport": {
            "type": "object",
            "properties": {
                "daily_cumulative": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DayReport"
                    }
                }
            }
        },
        "StateDayWiseReportWithDistricts": {
            "type": "object",
            "properties": {
                "state_name": {
                    "type": "string"
                },
                "districts": {
                    "type": "object",
                    "properties": {
                        "district_id": {
                            "type": "integer"
                        },
                        "district_name": {
                            "type": "string"
                        },
                        "daily_cumulative": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "total_cases": {
                                        "type": "integer",
                                        "format": "int64"
                                    },
                                    "total_deaths": {
                                        "type": "integer",
                                        "format": "int64"
                                    },
                                    "total_recovered_cases": {
                                        "type": "integer",
                                        "format": "int64"
                                    },
                                    "active_cases": {
                                        "type": "integer",
                                        "format": "int64"
                                    }
                                },
                                "required": [
                                    "date",
                                    "total_cases",
                                    "total_deaths",
                                    "total_recovered_cases",
                                    "active_cases"
                                ]
                            }
                        }
                    },
                    "required": ["district_id", "district_name"]
                }

            },
            "required": [
                "state_name",
                "districts"
            ]
        }
    },
    "parameters": {
        "StateIdParameter": {
            "name": "state_id",
            "in": "path",
            "required": true,
            "type": "integer"
        },
        "DistrictIdParameter": {
            "name": "district_id",
            "in": "path",
            "required": true,
            "type": "integer"
        },
        "MandalIdParameter": {
            "name": "mandal_id",
            "in": "path",
            "required": true,
            "type": "integer"
        },
        "DateParameter": {
            "name": "date",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "date"
        },
        "TillDateParameter": {
            "name": "till_date",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "date"
        },
        "LogInParameter": {
            "name": "login",
            "description": "user login",
            "in": "body",
            "schema": {
                "$ref": "#/definitions/User"
            }
        }

    },
    "responses": {
        "LoginSuccessfulResponse": {
            "description": "Log in successfully",
            "schema": {
                "$ref": "#/definitions/LogInSuccessful"
            }
        },
        "LoginFailedResponse": {
            "description": "Log in failed",
            "schema": {
                "$ref": "#/definitions/LogInFailed"
            }
        },
        "StateCumulativeResponse": {
            "description": "state cumulative response",
            "schema": {
                "$ref": "#/definitions/StateCumulative"
            }
        },
        "StateDayWiseResponse": {
            "description": "state daily cumulative response",
            "schema": {
                "$ref": "#/definitions/StateDayWiseReport"
            }
        },
        "StateDayWiseResponseDistricts": {
            "description": "state daily cumulative with districts response",
            "schema": {
                "$ref": "#/definitions/StateDayWiseReportWithDistricts"
            }
        },
        "StateDayReportResponse": {
            "description": "state day report response",
            "schema": {
                "$ref": "#/definitions/DayReport"
            }
        }
    },
    "paths": {
        "/login/v1": {
            "post": {
                "operationId": "log_in",
                "description": "user log in api",
                "parameters": [{
                    "$ref": "#/parameters/LogInParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/LoginSuccessfulResponse"
                    },
                    "400": {
                        "$ref": "#/responses/LoginFailedResponse"
                    }
                }
            }
        },
        "/state/cumulative": {
            "get": {
                "operationId": "state_get_cumulative_report",
                "description": "get cumulative report for state api",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "parameters": [{
                    "$ref": "#/parameters/TillDateParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/StateCumulativeResponse"
                    }
                }
            }
        },
        "/state/day_wise_report": {
            "get": {
                "operationId": "state_get_day_wise_report",
                "description": "get day wise report for state api",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "parameters": [],
                "responses": {
                    "200": {
                        "$ref": "#/responses/StateDayWiseResponse"
                    }
                }
            }
        },
        "/state/day_wise_report_with_districts": {
            "get": {
                "operationId": "state_get_day_wise_report_with_districts",
                "description": "get day wise report for state api",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "parameters": [],
                "responses": {
                    "200": {
                        "$ref": "#/responses/StateDayWiseResponseDistricts"
                    }
                }
            }
        },
        "/state/day_report": {
            "get": {
                "operationId": "state_get_day_report",
                "description": "get day report for state api",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "parameters": [{
                    "$ref": "#/parameters/DateParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/StateDayReportResponse"
                    }
                }
            }
        }
    }
}
